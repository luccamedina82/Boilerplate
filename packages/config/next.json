{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "strict": true, 
    "plugins": [
      {
        "name": "next"
      }
    ]
  }
}